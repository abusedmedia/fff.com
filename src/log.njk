---
layout: layouts/page.njk
title: Log
permalink: /log/index.html
---

<section class="max-w-6xl mx-auto px-6 py-20">
  <h1 class="text-5xl md:text-6xl font-black mb-12 leading-tight">Log</h1>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {% for post in collections.log %}
      <article>
        <h2 class="text-2xl font-black mb-2">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <p class="text-gray-400 text-sm mb-4">
          <time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
        </p>
        {% if post.data.excerpt %}
        <p class="text-gray-300">{{ post.data.excerpt }}</p>
        {% endif %}
      </article>
    {% endfor %}
  </div>
  {% if collections.log | length == 0 %}
  <p class="text-gray-400">No log entries yet.</p>
  {% endif %}
  </section>


